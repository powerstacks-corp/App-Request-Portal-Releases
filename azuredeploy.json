{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "app-request-portal",
      "version": "1.0.0"
    }
  },
  "parameters": {
    "environmentName": {
      "type": "string",
      "defaultValue": "dev",
      "allowedValues": ["dev", "staging", "prod"],
      "metadata": {
        "description": "The name of the environment (e.g., dev, staging, prod)"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "The location for all resources"
      }
    },
    "tenantId": {
      "type": "string",
      "defaultValue": "[tenant().tenantId]",
      "metadata": {
        "description": "The Entra ID tenant ID for authentication (auto-detected from deployment context)"
      }
    },
    "apiClientId": {
      "type": "string",
      "metadata": {
        "description": "The Entra ID application (client) ID for the API"
      }
    },
    "apiClientSecret": {
      "type": "securestring",
      "metadata": {
        "description": "The Entra ID client secret for the API application"
      }
    },
    "frontendClientId": {
      "type": "string",
      "metadata": {
        "description": "The Entra ID application (client) ID for the frontend SPA"
      }
    },
    "sqlAdminLogin": {
      "type": "string",
      "defaultValue": "sqladmin",
      "metadata": {
        "description": "SQL Server administrator login username"
      }
    },
    "sqlAdminPassword": {
      "type": "securestring",
      "minLength": 12,
      "metadata": {
        "description": "SQL Server administrator password (min 12 characters, must include uppercase, lowercase, number, and special character)"
      }
    },
    "releaseChannel": {
      "type": "string",
      "defaultValue": "Latest",
      "allowedValues": ["Latest", "Staging"],
      "metadata": {
        "description": "Release channel: 'Latest' for stable production releases, 'Staging' for preview/beta features"
      }
    },
    "adminGroupId": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "(Optional) Entra ID group Object ID for administrators. Leave empty to allow all authenticated users."
      }
    },
    "approverGroupId": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "(Optional) Entra ID group Object ID for approvers. Leave empty to allow all authenticated users."
      }
    },
    "emailSendAsUserId": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "(Optional) Entra ID User Object ID to send emails as. Leave empty to disable email notifications."
      }
    },
    "emailFromAddress": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "(Optional) Email address shown in From field. Should match the SendAsUserId mailbox."
      }
    },
    "appServicePlanSku": {
      "type": "string",
      "defaultValue": "B2",
      "allowedValues": ["B1", "B2", "B3", "S1", "S2", "S3", "P1v3", "P2v3", "P3v3"],
      "metadata": {
        "description": "App Service Plan SKU. B1-B3=Basic (default), S1-S3=Standard, P1v3-P3v3=Premium. Standard+ recommended for production."
      }
    },
    "appServicePlanInstanceCount": {
      "type": "int",
      "defaultValue": 1,
      "minValue": 1,
      "maxValue": 10,
      "metadata": {
        "description": "Number of App Service Plan instances. 2+ recommended for production high availability."
      }
    },
    "enableAutoHeal": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Enable Auto-Heal rules for automatic recovery from issues (FREE - recommended)"
      }
    },
    "enableHealthCheck": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Enable Health Check monitoring (FREE - recommended, requires 2+ instances for full benefit)"
      }
    },
    "storageRedundancy": {
      "type": "string",
      "defaultValue": "Standard_GRS",
      "allowedValues": ["Standard_LRS", "Standard_GRS", "Standard_RAGRS"],
      "metadata": {
        "description": "Storage redundancy: LRS (local only, cheapest), GRS (geo-redundant, recommended), RAGRS (read-access geo-redundant)"
      }
    },
    "sqlBackupRedundancy": {
      "type": "string",
      "defaultValue": "Geo",
      "allowedValues": ["Local", "Geo"],
      "metadata": {
        "description": "SQL backup storage redundancy: Local (single region) or Geo (cross-region, recommended for DR)"
      }
    }
  },
  "variables": {
    "appServicePlanName": "[concat('asp-apprequest-', parameters('environmentName'))]",
    "appName": "[concat('apprequest-', parameters('environmentName'), '-', uniqueString(resourceGroup().id))]",
    "storageAccountName": "[concat('stappreq', uniqueString(resourceGroup().id))]",
    "sqlServerName": "[concat('sql-apprequest-', parameters('environmentName'), '-', uniqueString(resourceGroup().id))]",
    "sqlDatabaseName": "AppRequestPortal",
    "appInsightsName": "[concat('ai-apprequest-', parameters('environmentName'))]",
    "logAnalyticsName": "[concat('la-apprequest-', parameters('environmentName'))]",
    "keyVaultName": "[concat('kv-appreq-', uniqueString(resourceGroup().id))]",
    "botName": "[concat('bot-apprequest-', parameters('environmentName'), '-', uniqueString(resourceGroup().id))]",
    "releasesBaseUrl": "https://github.com/PowerStacks-BI/App-Request-Portal-Releases/releases",
    "latestPackageUrl": "[concat(variables('releasesBaseUrl'), '/latest/download/AppRequestPortal.zip')]",
    "stagingPackageUrl": "[concat(variables('releasesBaseUrl'), '/download/staging/AppRequestPortal.zip')]",
    "packageUrl": "[if(equals(parameters('releaseChannel'), 'Latest'), variables('latestPackageUrl'), variables('stagingPackageUrl'))]",
    "deployPackage": true,
    "websiteContributorRoleId": "de139f84-1756-47ae-9be6-808fbbe84772",
    "skuTierMap": {
      "B1": "Basic",
      "B2": "Basic",
      "B3": "Basic",
      "S1": "Standard",
      "S2": "Standard",
      "S3": "Standard",
      "P1v3": "PremiumV3",
      "P2v3": "PremiumV3",
      "P3v3": "PremiumV3"
    }
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2022-10-01",
      "name": "[variables('logAnalyticsName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "name": "PerGB2018"
        },
        "retentionInDays": 30
      }
    },
    {
      "type": "Microsoft.Insights/components",
      "apiVersion": "2020-02-02",
      "name": "[variables('appInsightsName')]",
      "location": "[parameters('location')]",
      "kind": "web",
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName'))]"
      ],
      "properties": {
        "Application_Type": "web",
        "WorkspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName'))]"
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-09-01",
      "name": "[variables('appServicePlanName')]",
      "location": "[parameters('location')]",
      "kind": "linux",
      "sku": {
        "name": "[parameters('appServicePlanSku')]",
        "tier": "[variables('skuTierMap')[parameters('appServicePlanSku')]]",
        "capacity": "[parameters('appServicePlanInstanceCount')]"
      },
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2022-05-01-preview",
      "name": "[variables('sqlServerName')]",
      "location": "[parameters('location')]",
      "properties": {
        "administratorLogin": "[parameters('sqlAdminLogin')]",
        "administratorLoginPassword": "[parameters('sqlAdminPassword')]",
        "version": "12.0",
        "minimalTlsVersion": "1.2"
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2022-05-01-preview",
      "name": "[concat(variables('sqlServerName'), '/', variables('sqlDatabaseName'))]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
      ],
      "sku": {
        "name": "Basic",
        "tier": "Basic",
        "capacity": 5
      },
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "maxSizeBytes": 2147483648,
        "requestedBackupStorageRedundancy": "[parameters('sqlBackupRedundancy')]"
      }
    },
    {
      "type": "Microsoft.Sql/servers/firewallRules",
      "apiVersion": "2022-05-01-preview",
      "name": "[concat(variables('sqlServerName'), '/AllowAzureServices')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
      ],
      "properties": {
        "startIpAddress": "0.0.0.0",
        "endIpAddress": "0.0.0.0"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "[variables('storageAccountName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('storageRedundancy')]"
      },
      "kind": "StorageV2",
      "properties": {
        "accessTier": "Hot",
        "supportsHttpsTrafficOnly": true,
        "minimumTlsVersion": "TLS1_2",
        "allowBlobPublicAccess": false
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2023-07-01",
      "name": "[variables('keyVaultName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ],
      "properties": {
        "tenantId": "[subscription().tenantId]",
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "enabledForDeployment": false,
        "enabledForDiskEncryption": false,
        "enabledForTemplateDeployment": true,
        "enableRbacAuthorization": false,
        "enableSoftDelete": true,
        "softDeleteRetentionInDays": 7,
        "accessPolicies": []
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(variables('keyVaultName'), '/AzureAdClientSecret')]",
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"
      ],
      "properties": {
        "value": "[parameters('apiClientSecret')]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(variables('keyVaultName'), '/SqlConnectionString')]",
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]",
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
      ],
      "properties": {
        "value": "[concat('Server=tcp:', reference(resourceId('Microsoft.Sql/servers', variables('sqlServerName'))).fullyQualifiedDomainName, ',1433;Initial Catalog=', variables('sqlDatabaseName'), ';Persist Security Info=False;User ID=', parameters('sqlAdminLogin'), ';Password=', parameters('sqlAdminPassword'), ';MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;')]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(variables('keyVaultName'), '/StorageConnectionString')]",
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ],
      "properties": {
        "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2023-01-01').keys[0].value, ';EndpointSuffix=core.windows.net')]"
      }
    },
    {
      "type": "Microsoft.BotService/botServices",
      "apiVersion": "2022-09-15",
      "name": "[variables('botName')]",
      "location": "global",
      "kind": "azurebot",
      "sku": {
        "name": "F0"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', variables('appName'))]"
      ],
      "properties": {
        "displayName": "App Request Portal Bot",
        "description": "Proactive notification bot for the App Request Portal",
        "endpoint": "[concat('https://', reference(resourceId('Microsoft.Web/sites', variables('appName'))).defaultHostName, '/api/messages')]",
        "msaAppId": "[parameters('apiClientId')]",
        "msaAppType": "SingleTenant",
        "msaAppTenantId": "[parameters('tenantId')]",
        "schemaTransformationVersion": "1.3"
      }
    },
    {
      "type": "Microsoft.BotService/botServices/channels",
      "apiVersion": "2022-09-15",
      "name": "[concat(variables('botName'), '/MsTeamsChannel')]",
      "location": "global",
      "dependsOn": [
        "[resourceId('Microsoft.BotService/botServices', variables('botName'))]"
      ],
      "properties": {
        "channelName": "MsTeamsChannel",
        "properties": {
          "isEnabled": true
        }
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "[variables('appName')]",
      "location": "[parameters('location')]",
      "kind": "app,linux",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "[resourceId('Microsoft.Insights/components', variables('appInsightsName'))]",
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]",
        "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'AzureAdClientSecret')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'SqlConnectionString')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'StorageConnectionString')]"
      ],
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "httpsOnly": true,
        "clientAffinityEnabled": false,
        "siteConfig": {
          "linuxFxVersion": "DOTNETCORE|8.0",
          "minTlsVersion": "1.2",
          "ftpsState": "Disabled",
          "alwaysOn": true,
          "healthCheckPath": "[if(parameters('enableHealthCheck'), '/health', json('null'))]",
          "autoHealEnabled": "[parameters('enableAutoHeal')]",
          "autoHealRules": "[if(parameters('enableAutoHeal'), createObject('triggers', createObject('statusCodes', createArray(createObject('status', 500, 'subStatus', 0, 'win32Status', 0, 'count', 10, 'timeInterval', '00:05:00')), 'slowRequests', createObject('timeTaken', '00:01:00', 'count', 5, 'timeInterval', '00:05:00')), 'actions', createObject('actionType', 'Recycle', 'minProcessExecutionTime', '00:01:00')), json('null'))]",
          "appSettings": [
            {
              "name": "Application__ReleasesUrl",
              "value": "https://api.github.com/repos/PowerStacks-BI/App-Request-Portal-Releases/releases/latest"
            },
            {
              "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
              "value": "[reference(resourceId('Microsoft.Insights/components', variables('appInsightsName'))).ConnectionString]"
            },
            {
              "name": "AzureAd__Instance",
              "value": "https://login.microsoftonline.com/"
            },
            {
              "name": "AzureAd__TenantId",
              "value": "[parameters('tenantId')]"
            },
            {
              "name": "AzureAd__ClientId",
              "value": "[parameters('apiClientId')]"
            },
            {
              "name": "AzureAd__ClientSecret",
              "value": "[concat('@Microsoft.KeyVault(SecretUri=https://', variables('keyVaultName'), '.vault.azure.net/secrets/AzureAdClientSecret/)')]"
            },
            {
              "name": "FrontendSettings__ClientId",
              "value": "[parameters('frontendClientId')]"
            },
            {
              "name": "ConnectionStrings__DefaultConnection",
              "value": "[concat('@Microsoft.KeyVault(SecretUri=https://', variables('keyVaultName'), '.vault.azure.net/secrets/SqlConnectionString/)')]"
            },
            {
              "name": "AppSettings__AdminGroupId",
              "value": "[parameters('adminGroupId')]"
            },
            {
              "name": "AppSettings__ApproverGroupId",
              "value": "[parameters('approverGroupId')]"
            },
            {
              "name": "EmailSettings__SendAsUserId",
              "value": "[parameters('emailSendAsUserId')]"
            },
            {
              "name": "EmailSettings__FromAddress",
              "value": "[parameters('emailFromAddress')]"
            },
            {
              "name": "EmailSettings__PortalUrl",
              "value": "[concat('https://', variables('appName'), '.azurewebsites.net')]"
            },
            {
              "name": "WEBSITE_RUN_FROM_PACKAGE",
              "value": "[variables('packageUrl')]"
            },
            {
              "name": "AzureStorage__ConnectionString",
              "value": "[concat('@Microsoft.KeyVault(SecretUri=https://', variables('keyVaultName'), '.vault.azure.net/secrets/StorageConnectionString/)')]"
            },
            {
              "name": "Bot__MicrosoftAppId",
              "value": "[parameters('apiClientId')]"
            },
            {
              "name": "Bot__MicrosoftAppPassword",
              "value": "[concat('@Microsoft.KeyVault(SecretUri=https://', variables('keyVaultName'), '.vault.azure.net/secrets/AzureAdClientSecret/)')]"
            },
            {
              "name": "Bot__MicrosoftAppType",
              "value": "SingleTenant"
            },
            {
              "name": "Bot__MicrosoftAppTenantId",
              "value": "[parameters('tenantId')]"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[guid(resourceId('Microsoft.Web/sites', variables('appName')), variables('websiteContributorRoleId'))]",
      "scope": "[concat('Microsoft.Web/sites/', variables('appName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', variables('appName'))]"
      ],
      "properties": {
        "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', variables('websiteContributorRoleId'))]",
        "principalId": "[reference(resourceId('Microsoft.Web/sites', variables('appName')), '2022-09-01', 'full').identity.principalId]",
        "principalType": "ServicePrincipal"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/accessPolicies",
      "apiVersion": "2023-07-01",
      "name": "[concat(variables('keyVaultName'), '/add')]",
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]",
        "[resourceId('Microsoft.Web/sites', variables('appName'))]"
      ],
      "properties": {
        "accessPolicies": [
          {
            "tenantId": "[subscription().tenantId]",
            "objectId": "[reference(resourceId('Microsoft.Web/sites', variables('appName')), '2022-09-01', 'full').identity.principalId]",
            "permissions": {
              "secrets": ["get", "list"]
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "appUrl": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.Web/sites', variables('appName'))).defaultHostName)]"
    },
    "sqlServerFqdn": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Sql/servers', variables('sqlServerName'))).fullyQualifiedDomainName]"
    },
    "databaseName": {
      "type": "string",
      "value": "[variables('sqlDatabaseName')]"
    },
    "appName": {
      "type": "string",
      "value": "[variables('appName')]"
    },
    "releaseChannel": {
      "type": "string",
      "value": "[parameters('releaseChannel')]"
    },
    "deployedPackageUrl": {
      "type": "string",
      "value": "[variables('packageUrl')]"
    },
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageAccountName')]"
    },
    "keyVaultName": {
      "type": "string",
      "value": "[variables('keyVaultName')]"
    },
    "keyVaultUri": {
      "type": "string",
      "value": "[concat('https://', variables('keyVaultName'), '.vault.azure.net/')]"
    },
    "teamsBotMessagingEndpoint": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.Web/sites', variables('appName'))).defaultHostName, '/api/messages')]"
    },
    "teamsBotAppId": {
      "type": "string",
      "value": "[parameters('apiClientId')]"
    }
  }
}
